<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title))%></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-135457381-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-135457381-1');
    </script>

  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light static-top">
      <div class="container my-auto">
        <%= link_to root_path, :class => "navbar-brand" do %>
          <%= image_tag "logo.png", class: "navbar-logo" %>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarToggler">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item"><%= link_to "Le blog", "https://blog.leratcurieux.fr", class: "nav-link" %></li> 
            <li class="nav-item"><%= link_to "Notre aventure", root_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Professionnel", "#professionnel", class: "nav-link" %></li>
          </ul> 
        </div>
      </div>
    </nav>
    <%= yield %>

    <!-- Footer -->
    <footer class="footer bg-light">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
            <ul class="list-inline mb-2">
              <li class="list-inline-item">
                <%= link_to "Le Projet", root_path %>
              </li>
              <li class="list-inline-item">&sdot;</li>
              <li class="list-inline-item">
                <%= link_to "Nous contacter", contact_path %>
              </li>
              <li class="list-inline-item">&sdot;</li>
              <li class="list-inline-item">
                <%= link_to "Politique de confidentialité", privacy_path %>
              </li>
            </ul>
            <p class="text-muted small mb-4 mb-lg-0">&copy; LeRatCurieux 2019. Tous droits réservés.</p>
          </div>
          <div class="col-lg-6 h-100 text-center text-lg-right my-auto">
            <ul class="list-inline mb-0">
              <li class="list-inline-item mr-3">
                <a href="https://www.facebook.com/leratcurieux/">
                  <i class="fa fa-facebook fa-2x fa-fw"></i>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="mailto:leratcurieux@gmail.com">
                  <i class="fa fa-envelope fa-2x fa-fw"></i>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
